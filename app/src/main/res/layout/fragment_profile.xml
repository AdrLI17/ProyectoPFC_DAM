<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <!-- Foto de perfil -->
    <ImageView
        android:id="@+id/imageViewProfile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_ejemplo_perfil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textViewUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Nombre de usuario -->
    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre de Usuario"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@id/imageViewProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Estadísticas del juego -->
    <TextView
        android:id="@+id/textViewStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estadísticas del juego"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/textViewUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Sudokus completados -->
    <TextView
        android:id="@+id/textViewSudokuCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudokus completados: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewStats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Rompecabezas completados -->
    <TextView
        android:id="@+id/textViewPuzzleCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rompecabezas completados: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewSudokuCompleted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Memory completados -->
    <TextView
        android:id="@+id/textViewMemoryCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Memory completados: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewPuzzleCompleted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Sopa de letras completadas -->
    <TextView
        android:id="@+id/textViewWordSearchCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sopa de letras completadas: 0"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/textViewMemoryCompleted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Botón de editar perfil -->
    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Editar Perfil"
        app:layout_constraintTop_toBottomOf="@id/textViewWordSearchCompleted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Botón de opciones adicionales -->
    <Button
        android:id="@+id/btnMoreOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Más Opciones"
        app:layout_constraintTop_toBottomOf="@id/btnEditProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>